@page
@model TodoApp.Pages.Lists.Todos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Todo.TodoId" />
            <div class="form-group">
                <label asp-for="Todo.Title" class="control-label"></label>
                <input asp-for="Todo.Title" class="form-control" />
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            @*add catergories items*@
            <div class="form-group">
                <label asp-for="Todo.Catergories" class="control-label"></label>
                <select asp-for="Todo.Catergories" class="form-control" asp-items="ViewBag.TodoItems"></select>
                <span asp-validation-for="Todo.Catergories" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Todo.IsDone" /> @Html.DisplayNameFor(model => model.Todo.IsDone)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Todo.StartDate" class="control-label"></label>
                <input asp-for="Todo.StartDate" class="form-control" />
                <span asp-validation-for="Todo.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.FinshDate" class="control-label"></label>
                <input asp-for="Todo.FinshDate" class="form-control" />
                <span asp-validation-for="Todo.FinshDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
