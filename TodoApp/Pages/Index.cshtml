@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div><h2>Tasks on going:</h2></div>
<section>
    <!--loop todo list-->
    @foreach (var todo in Model.TodoList)
    {
        if (todo.IsDone == false)
        {
            <section class="todoList">

                <h2>@todo.TodoId</h2>
                <p>@todo.Title</p>
                <p>@todo.StartDate</p>
                <p>-</p>
                <p>@todo.FinshDate</p>
                <br />

            </section>
        }

    }

</section>